<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>HotChocolate</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Raphael Lorenzeto de Abreu</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Description>Simple extension to the original HotChocolate Type system to make it easier to have rich schemas by using custom scalars that describe common units of length, time, speed, area, angles, etc.</Description>
    <RepositoryUrl>https://github.com/raphaabreu/HotChocolate.Types.RichScalars</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageProjectUrl>https://github.com/raphaabreu/HotChocolate.Types.RichScalars</PackageProjectUrl>
    <PackageTags>hotchocolate custom scalars speed length angle time area</PackageTags>
    <Copyright>MIT</Copyright>
    <Version>10.3.5</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.Types" Version="10.3.5" />
  </ItemGroup>

</Project>
